{
  "name": "handit-login-extension",
  "displayName": "Handit Login Extension",
  "description": "A VS Code extension with a modern login interface",
  "version": "1.0.0",
  "publisher": "handit",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:handitLogin.webview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "handitLogin": [
        {
          "id": "handitLogin.webview",
          "name": "Handit Login",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "handitLogin",
          "title": "Handit Login",
          "icon": "$(person)"
        }
      ]
    },
    "commands": [
      {
        "command": "handitLogin.openLogin",
        "title": "Open Login",
        "icon": "$(person)"
      },
      {
        "command": "handitLogin.login",
        "title": "Login",
        "icon": "$(sign-in)"
      }
    ],
    "configuration": {
      "title": "Handit Login",
      "properties": {
        "handitLogin.apiUrl": {
          "type": "string",
          "default": "https://api.handit.ai",
          "description": "API URL for Handit services"
        },
        "handitLogin.devMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable development mode for webview"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-webview": "cd webview && npm run build",
    "dev-webview": "cd webview && npm run dev",
    "lint": "eslint src --ext ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {}
}
